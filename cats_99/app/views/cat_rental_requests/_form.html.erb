<% if action == :edit %>
  <% action_url = cat_rental_request_url(cat_rental_request)%>
<% else %>
  <% action_url = cat_rental_requests_url %>
<% end %>

<form action="<%= action_url %>" method="post">
   <!-- <%# if cat.persisted? %> -->
  <% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label for="cat_id">Cat Id</label>
  <input id="cat_id" type="text" name="cat_rental_request[cat_id]" value="<%= cat_rental_request.cat_id %>">

<br><br>

  <label for="start_date">Start Date</label>
  <input id="start_date" type="date" name="cat_rental_request[start_date]" value="<%= cat_rental_request.start_date %>">


<br><br>

  <label for="end_date">End Date</label>
  <input id="end_date" type="date" name="cat_rental_request[end_date]" value="<%= cat_rental_request.end_date %>">

<br><br>

  <input type="hidden" name="cat_rental_request[status]" value="<%= cat_rental_request.status %>">


  <input type="submit" value="<%= action == :edit ? 'update rental' : 'add rental'%>">
</form>
